{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
      "MinimumLevel": "Error",
      "WriteTo": [
        {
          "Name": "Console",
          "restrictedToMinimumLevel": "Information"
        },
        {
          "Name": "File",
          "Args": {
            "path": "log.txt",
            "rollingInterval": 3,
            "retainedFileCountLimit": 10
          },
          "restrictedToMinimumLevel": "Information"
        },
        {
          "Name": "MSSqlServer",
          "Args": {
            "connectionString": "Data Source=.;Initial Catalog=TallerNet;Integrated Security=True",
            "sinkOptionsSection": {
              "tableName": "Logs",
              "schemaName": "Logger",
              "autoCreateSqlTable": true,
              "batchPostingLimit": 1
            }
          },
          "restrictedToMinimumLevel": "Error"
        }
      ],
      "Enrich": [
        "WithThreadId"
      ]
    }
  },
  "AllowedHosts": "*",
  "Ruc": "202020202022",
  "ConnectionStrings": {
    "BdSql": "Data Source=.;Initial Catalog=TallerNet;Integrated Security=True"
  },
  "KafkaParam": {
    "ServerUrl": "",
    "TopicName": ""
  },
  "JwtParam": {
    "Audience": "demo.com",
    "Issuer": "demo.com",
    "ExpirationTime": 5,
    "SecretKey": "Galaxy123abcxyz987test"
  }
}
